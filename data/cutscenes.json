{
    "Ellipse": {
        "start": {
            "player": {"pos": [64, 144]},
            "ellipse": {"pos": [256, 144], "room": 0}
        },
        "time_commands": {
            "0": [
                "player controlled",
                "player jump not",
                "ellipse face left",
                "text move 168 20",
                "text change Use W and D or LEFT and RIGHT to move",
                "text display",
                "run testMoved"
            ]
        },
        "conditionals": {
            "testMoved": "player x >= 120"
        },
        "cond_commands":{
            "testMoved": [
                "player uncontrolled",
                "player face right",
                "text change I am here to warn you...",
                "text move 264 120",
                "delay 165 step2"
            ],
            "step2": [
                "text hide",
                "delay 30 step3"
            ],
            "step3": [
                "text change The Belloq are coming...",
                "text display",
                "delay 165 step4"
            ],
            "step4": [
                "text hide",
                "ellipse walk right",
                "player controlled",
                "player jump can"
            ]
        }
    },

    "Corlen": {
        "backgroundAnim": {"path": "res/cutscenes/corlen's_house.png", "room": 1},
        "start": {
            "player": {"pos": [0, 192]},
            "ellipse": {"pos": [-16, -16], "room": 0},
            "corlen": {"pos": [210, 192], "room": 0}
        },

        "time_commands": {
            "0": [
                "player jump not",
                "player controlled",
                "run corlenNotice"
            ]
        },
        "conditionals": {
            "corlenNotice": "player x > 90"
        },
        "cond_commands": {
            "corlenNotice": [
                "text change !",
                "text move 218 170",
                "text display",
                "corlen face left",
                "player uncontrolled",
                "delay 60 whoRU"
            ], "whoRU": [
                "text color 252 227 3",
                "text change Who are you?",
                "delay 80 noResponse..."
            ], "noResponse...": [
                "text hide",
                "delay 120 movingOn"
            ], "movingOn": [
                "text change Well, uh, I'm Corlen.",
                "text display",
                "delay 90 randomHallway"
            ], "randomHallway": [
                "text change This is a random hallway in the middle of nowhere.",
                "delay 120 something"
            ], "something": [
                "text change [INSERT CORLEN SOUNDS]",
                "player controlled"
            ]
        }
    }
}