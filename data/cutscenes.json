{
    "Ellipse": {
        "start": {
            "player": {"pos": [64, 144]},
            "ellipse": {"pos": [256, 144], "room": 0}
        },
        "time_commands": {
            "0": [
                "player controlled",
                "player jump not",
                "ellipse face left",
                "text move 168 20",
                "text change Use W and D or LEFT and RIGHT to move",
                "text display",
                "run testMoved"
            ]
        },
        "conditionals": {
            "testMoved": "player x >= 120"
        },
        "cond_commands":{
            "testMoved": [
                "player uncontrolled",
                "player face right",
                "text change I am here to warn you...",
                "text move 264 120",
                "delay 165 step2"
            ],
            "step2": [
                "text hide",
                "delay 30 step3"
            ],
            "step3": [
                "text change The Belloq are coming...",
                "text display",
                "delay 165 step4"
            ],
            "step4": [
                "text hide",
                "ellipse walk right",
                "player controlled",
                "player jump can"
            ]
        }
    },

    "Corlen": {
        "backgroundAnim": {"path": "res/cutscenes/corlen's_house.png", "room": 1},
        "start": {
            "player": {"pos": [0, 192]},
            "ellipse": {"pos": [384, 192], "room": 1},
            "corlen": {"pos": [210, 192], "room": 0}
        },

        "time_commands": {
            "0": [
                "player jump not",
                "player controlled",
                "run corlenNotice"
            ]
        },
        "conditionals": {
            "corlenNotice": "player x > 90",
            "corlenStop": "corlen room == 1 and corlen x > 110",
            "playerMovingOn": "room == 1 and player x >= 20",
            "ellipseStop": "ellipse x < 300",
            "corlenBehindPlayer": "corlen x < 4",
            "corlenGoesBack": "corlen x > 110"
        },
        "cond_commands": {
            "corlenNotice": [
                "text color 252 227 3",
                "text change !",
                "text move 218 170",
                "text display",
                "corlen face left",
                "player uncontrolled",
                "delay 60 whoRU"
            ], "whoRU": [
                "text change Who are you?",
                "delay 80 noResponse..."
            ], "noResponse...": [
                "text hide",
                "delay 60 turnRound"
            ], "turnRound": [
                "corlen face right",
                "delay 60 movingOn"
            ], "movingOn": [
                "corlen face left",
                "text display",
                "text change Not a big talker, huh?",
                "delay 120 introducing"
            ], "introducing": [
                "text change Well, uh, I'm Corlen.",
                "text display",
                "delay 110 randomHallway"
            ], "randomHallway": [
                "text move 118 155",
                "text change And this is a random\nhallway in the middle of nowhere.",
                "delay 140 delayyy"
            ], "delayyy": [
                "text hide",
                "delay 80 newRoundHere"
            ], "newRoundHere": [
                "text display",
                "text move 118 170",
                "text change You're new around here, aren't you?",
                "delay 120 newbieFight"
            ], "newbieFight": [
                "text change Only a newbie would fight the Belloq like that.",
                "delay 150 saysNothing"
            ], "saysNothing": [
                "text hide",
                "delay 90 ropes"
            ], "ropes": [
                "text change Oh well, I guess I'll have to show you the ropes.",
                "text display",
                "delay 130 follow"
            ], "follow": [
                "text change Follow me.",
                "delay 80 allowFollow"
            ], "allowFollow": [
                "text hide",
                "corlen walk right",
                "player controlled",
                "run corlenStop",
                "run playerMovingOn"
            ],

            "corlenStop": [
                "corlen face left",
                "corlen walk still"
            ],
            
            "playerMovingOn": [
                "player uncontrolled",
                "text move 118 170",
                "text change This is my humble abode.",
                "text display",
                "delay 90 notMuch"
            ], "notMuch": [
                "text move 118 155",
                "text change It's not much, but\nit's enough for me.",
                "delay 100 silence."
            ], "silence.": [
                "text hide",
                "delay 60 thinking"
            ], "thinking": [
                "text display",
                "text change You may be thinking, \n\"What is this place?\"",
                "delay 130 assuming"
            ], "assuming": [
                "text change I'm assuming you're thinking that\nbecause you haven't said a word yet.",
                "delay 150 goodQuestion"
            ], "goodQuestion": [
                "text move 118 170",
                "text change That's a good question.",
                "delay 90 dunnoMan"
            ], "dunnoMan": [
                "text change But I don't know either.",
                "delay 90 noOneElse"
            ], "noOneElse": [
                "text move 118 155",
                "text change There's no one else around\nbesides you and me,",
                "delay 100 allTheRest"
            ], "allTheRest": [
                "text change and those crazy monsters\ncalled the Belloq everywhere.",
                "delay 30 ellipseAppears"
            ], "ellipseAppears": [
                "ellipse walk left",
                "run ellipseStop",
                "delay 100 AHHHHH"
            ], 
            
            "ellipseStop": ["ellipse walk still"],

            "AHHHHH": [
                "text move 118 170",
                "text change AHHHHH A BELLOQ!",
                "corlen face right",
                "ellipse walk still",
                "delay 90 careful"
            ], "careful": [
                "text move 118 155",
                "text change Be careful, Belloq are very dangerous.\nWe should get out of here quickly!",
                "delay 150 ellipseTalked!"
            ], "ellipseTalked!": [
                "text change ...",
                "text color 255 255 255",
                "text move 308 170",
                "delay 120 itTalked"
            ], "itTalked": [
                "text change It talked!",
                "text color 252 227 3",
                "text move 118 170",
                "delay 40 corlenMove"
            ], "corlenMove": [
                "text hide",
                "corlen walk left",
                "run corlenBehindPlayer"
            ],

            "corlenBehindPlayer": [
                "corlen walk still",
                "corlen face right",
                "delay 20 moreDots"
            ],

            "moreDots": [
                "text change ...",
                "text color 255 255 255",
                "text move 308 192",
                "delay 120 hmm"
            ], "hmm": [
                "text change Hmm...",
                "text color 252 227 3",
                "text move 20 170",
                "delay 100 moveRight"
            ], "moveRight": [
                "text hide",
                "corlen walk right",
                "run corlenGoesBack"
            ],
            
            "corlenGoesBack": [
                "corlen walk still",
                "text color 252 227 3",
                "text move 118 170",
                "text change Maybe you aren't a Belloq after all.",
                "delay 100 oneOfUs"
            ], "oneOfUs": [
                "corlen face left",
                "text change If it can talk, maybe it's one of us!",
                "delay 110 ellipseSayEllipse"
            ], "ellipseSayEllipse": [
                "corlen face right",
                "text change ...",
                "text color 255 255 255",
                "text move 308 192",
                "delay 120 namingEllipse"
            ], "namingEllipse": [
                "text change I think I'm going to call you... Ellipse!",
                "text color 252 227 3",
                "text move 118 170",
                "delay 100 greatIdeaRight?"
            ], "greatIdeaRight?": [
                "text change What a great nickname, right Ellipse?",
                "delay 100 ellipseResponds"
            ], "ellipseResponds": [
                "text change ...",
                "text color 255 255 255",
                "text move 308 192",
                "delay 120 youKnowWhat?"
            ], "YouKnowWhat?": [
                "text change You know what?",
                "delay 20 switchDirs"
            ], "switchDirs": [
                "corlen face left",
                "delay 20 faceyRight"
            ], "faceyRight": [
                "corlen face right",
                "delay 40 makeGoodTeam"
            ], "makeGoodTeam": [
                "text change We could make a good team,",
                "delay 90 names"
            ], "names": [
                "text change Corlen, Ellipse, and a weird human!",
                "delay 80 faceLeft"
            ], "faceLeft": [
                "corlen face left",
                "delay 30 sickOfHouse"
            ], "sickOfHouse": [
                "text change And I'm sick of staying in my house all day.",
                "delay 120 goOnAdventure"
            ], "goOnAdventure": [
                "corlen face right",
                "text change I want to go on an adventure!",
                "delay 100 comparisons"
            ], "comparisons": [
                "corlen face left",
                "text move 118 155",
                "text change And if a tiny human can survive\na Belloq encounter, I can too!",
                "delay 120 dootdootdoot"
            ], "dootdootdoot": [
                "text change ...",
                "text color 255 255 255",
                "text move 308 192",
                "delay 120 puttingWordsInMouth"
            ], "puttingWordsInMouth": [
                "text change See, Ellipse approves!",
                "text color 252 227 3",
                "text move 118 170",
                "delay 90 mooooreDoots"
            ], "mooooreDoots": [
                "text change ...",
                "text color 255 255 255",
                "text move 308 192",
                "delay 120 leadDahWay"
            ], "leadDahWay": [
                "corlen face left",
                "text change Alright, blue human, lead the way!",
                "text color 252 227 3",
                "text move 118 170",
                "delay 110 finish"
            ], "finish": [
                "corlen face right",
                "player controlled"
            ]
        }
    }
}